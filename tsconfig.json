{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "outDir": "./build/",
    "rootDir": "./",
    "module": "commonjs",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "lib": ["es2017"],
    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 1,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "mocha"],
    "paths": {}
  },
  "include": ["./src/**/*", "docs/**/*"],
  "exclude": ["./dist/**/*"]
}
